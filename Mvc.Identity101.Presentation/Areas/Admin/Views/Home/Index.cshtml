@{
ViewBag.Title = "Yönetim Paneli";
Layout = "_Layout";
}

<div class="admin-dashboard">
    <div class="dashboard-welcome">
        <div class="welcome-content">
            <h1 class="welcome-title">
                <i style="color: yellow" class="bi bi-grid-1x2-fill me-2"></i>
                Yönetim Paneli
            </h1>
            <p class="welcome-subtitle">Sistem istatistiklerine ve yönetim araçlarına buradan erişebilirsiniz</p>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="statistics-section">
        <div class="statistics-header">
            <h2 class="statistics-title">
                <i class="bi bi-graph-up-arrow me-2"></i>
                İstatistikler
            </h2>
            <p class="statistics-subtitle">Sistem geneli sayısal veriler</p>
        </div>

        <div class="statistics-grid">
            <div class="stat-item post-stat">
                <div class="stat-icon">
                    <i class="bi bi-file-text-fill"></i>
                </div>
                <div class="stat-content">
                    <span class="stat-number">@ViewBag.PostCount</span>
                    <span class="stat-name">Toplam Gönderi</span>
                </div>
            </div>

            <div class="stat-item comment-stat">
                <div class="stat-icon">
                    <i class="bi bi-chat-dots-fill"></i>
                </div>
                <div class="stat-content">
                    <span class="stat-number">@ViewBag.CommentCount</span>
                    <span class="stat-name">Toplam Yorum</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Section -->
    <div class="management-section">
        <div class="management-header">
            <h2 class="management-title">
                <i class="bi bi-gear-fill me-2"></i>
                Yönetim Araçları
            </h2>
            <p class="management-subtitle">Sistem yönetimi ve kontrol paneli</p>
        </div>

        <div class="dashboard-stats">
            <div class="stat-card user-card">
                <div class="stat-card-body">
                    <div class="stat-card-info">
                        <div class="stat-card-header">
                            <div class="stat-icon-wrapper">
                                <i class="bi bi-people-fill"></i>
                            </div>
                            <h3 class="stat-title">Kullanıcılar</h3>
                        </div>
                        <div class="stat-value-wrapper">
                            <span class="stat-value">@ViewBag.UserCount</span>
                            <span class="stat-label">Toplam Kayıtlı Kullanıcı</span>
                        </div>
                    </div>
                    <div class="stat-card-footer">
                        <a asp-controller="Home"  asp-area="Admin" asp-action="UserList" class="stat-link">
                            <span>Kullanıcıları Yönet</span>
                            <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="stat-card role-card">
                <div class="stat-card-body">
                    <div class="stat-card-info">
                        <div class="stat-card-header">
                            <div class="stat-icon-wrapper">
                                <i class="bi bi-shield-fill"></i>
                            </div>
                            <h3 class="stat-title">Roller</h3>
                        </div>
                        <div class="stat-value-wrapper">
                            <span class="stat-value">@ViewBag.RoleCount</span>
                            <span class="stat-label">Toplam Sistem Rolü</span>
                        </div>
                    </div>
                    <div class="stat-card-footer">
                        <a asp-controller="Role" asp-action="Index" class="stat-link">
                            <span>Rolleri Yönet</span>
                            <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

